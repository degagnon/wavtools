{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "taskName": "build debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "g++",
            "type": "shell",
            "presentation": {
                "reveal": "always"
            },
            "args": [
                "${fileBasename}",      // Compile the current file
                "-std=c++0x",           // using C++11
                "-o",                   // with output name
                "${fileBasenameNoExtension}.exe",  // based on the current file's name
                "-g3",                  // with maximum debug level
                "-Wall"                 // showing all warnings
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}